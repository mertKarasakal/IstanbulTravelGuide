@model Entities.Concrete.Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="card ">
        <div class="card-header"><h3>Gönderi Ekle</h3></div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Ad Soyad</label>

                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    <label for="inputState">Kategori</label>
                    @Html.DropDownList("CategoryId", null, "seçiniz", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-3">
                    <label for="inputZip">Fotoğraf</label>
                    @Html.DropDownList("PhotoId", null, "seçiniz", htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.PhotoId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress">Başlık</label>
                @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control", placeholder = "başlık " } })
                @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="inputAddress2">Gönderi Açıklaması</label>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "descrip" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label for="inputAddress2">Gönderi Metni</label>
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control text-area", placeholder = "metin " } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

            </div>

           
        </div>
        <div class="card-footer"> <input type="submit" value="Ekle" class="btn btn-info" />|
            <a class="btn btn-outline-secondary" href="/Post/Index" tabindex="-1" aria-disabled="true">Listeye dön</a></div>

    </div>
   
   
     
  

}